# Check if we match within numerical precision
tolerance = 1e-8
matches = True
for name, calc, expected in [("a*", a_star_rot, a_star_expected),
                              ("b*", b_star_rot, b_star_expected),
                              ("c*", c_star_rot, c_star_expected)]:
