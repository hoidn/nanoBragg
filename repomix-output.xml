		deviate = fabsf(deviate);
	    	pixel_F = sign*sqrt(deviate/polar/omega_pixel/fluence/r_e_sqr/molecules*steps);
		/* maintain F and stol images */
                stolimage[j] = stol/stol_file_mult;
