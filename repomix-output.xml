            # Extract the rotated vectors - both reciprocal AND real space
            a_vec = vectors["a"]
            b_vec = vectors["b"]
            c_vec = vectors["c"]
            a_star = vectors["a_star"]
            b_star = vectors["b_star"]
            c_star = vectors["c_star"]

