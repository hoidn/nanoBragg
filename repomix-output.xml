            vectors = {
                "a": a_vec,
                "b": b_vec,
                "c": c_vec,
                "a_star": a_star,
                "b_star": b_star,
                "c_star": c_star,
                "V": V,
            }
            vectors = self._apply_static_orientation(vectors)
            # Extract the rotated vectors - both reciprocal AND real space
            a_vec = vectors["a"]
            b_vec = vectors["b"]
            c_vec = vectors["c"]
            a_star = vectors["a_star"]
            b_star = vectors["b_star"]
            c_star = vectors["c_star"]

        return {
            "a": a_vec,
            "b": b_vec,
            "c": c_vec,
            "a_star": a_star,
            "b_star": b_star,
            "c_star": c_star,
            "V": V,
        }

