                                        if(fpixel==512 && spixel==512 && source==0 && phi_tic==0 && mos_tic==0) {
                                            printf("TRACE:   After mosaic rotation:\n");
                                            printf("TRACE:     a = [%g, %g, %g] |a| = %g\n", a[1], a[2], a[3], a[0]);
                                            printf("TRACE:     b = [%g, %g, %g] |b| = %g\n", b[1], b[2], b[3], b[0]);
