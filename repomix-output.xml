	    }

//	    frame.mmapdata = mmap(NULL,2*frame.width*frame.height+frame.header_size,PROT_READ,MAP_SHARED,fileno(frame.handle),0);
	    frame.mmapdata = calloc(2,frame.width*frame.height+frame.header_size);
