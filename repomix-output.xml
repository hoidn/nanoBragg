    if(calculate_noise == 0){
	return 0;
    }

    /* simulate Poisson noise */
    j = 0;
    sum = 0.0;
    overloads = 0;
    for(ypixel=0;ypixel<ypixels;++ypixel)
    {
        for(xpixel=0;xpixel<xpixels;++xpixel)
