    ratio = torch.max(golden_tensor) / torch.max(result)
    print(f"Scaling ratio: {ratio:.1f}")

    # Test if scaled version matches
    scaled_result = result * ratio
    if torch.allclose(scaled_result, golden_tensor, rtol=1e-3, atol=1e-6):
