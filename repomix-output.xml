    print("Detector Geometry Visual Verification")
    print("=====================================")
    
    # Create output directory
    output_dir = create_output_dir()
    
    # Configuration 1: Baseline (simple_cubic)
    baseline_config = DetectorConfig(
        distance_mm=100.0,
        pixel_size_mm=0.1,
        spixels=1024,
        fpixels=1024,
        beam_center_s=51.2,
        beam_center_f=51.2,
