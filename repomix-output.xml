    config = DetectorConfig(
        detector_pivot=DetectorPivot.SAMPLE,
        detector_rotx_deg=5.0,
        detector_roty_deg=3.0,
        detector_rotz_deg=2.0,
        detector_twotheta_deg=15.0,
