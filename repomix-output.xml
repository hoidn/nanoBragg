	    {
		worst=i;
		worst_deviate=deviate;
	    }
	    sumd+=deviate*deviate;
        }
        rmsd=sqrt(sumd/points);

	rejection=0;
	if(worst_deviate>sigma_cutoff*rmsd)
	{
	    /* we have a reject! */
	    rejection=1;

	    /* move it to end of the array and forget about it */
	    SWAP(arr[worst],arr[points]);
	    --points;
	}
    }

    *final_rmsd = rmsd;
    *final_n = points;
    return avg;
}
