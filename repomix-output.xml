	    }

	    /* reset photon count for this pixel */
	    I = 0;

	    /* loop over sub-pixels */
	    for(suby=0;suby<oversample;++suby){
		for(subx=0;subx<oversample;++subx){

		    /* absolute mm position on detector (relative to its origin) */
